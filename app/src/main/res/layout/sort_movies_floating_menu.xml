<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:paddingBottom="@dimen/unit_10"
    android:paddingLeft="@dimen/unit_10"
    android:paddingRight="@dimen/activity_vertical_margin"
    fab:menu_backgroundColor="@color/divider"
    fab:menu_colorNormal="@color/accent"
    fab:menu_colorPressed="@color/accent_dark"
    fab:menu_colorRipple="@color/accent_ripple"
    fab:menu_labels_ellipsize="end"
    fab:menu_labels_singleLine="true"
    fab:menu_labels_style="@style/MenuLabelsStyle">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/sortByPopular"
        style="@style/MenuButtonsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border_white_24dp"
        fab:fab_label="Sort By most popular" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/sortByHighestRated"
        style="@style/MenuButtonsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_border_white_24dp"
        fab:fab_label="Sort by highest rated" />


</com.github.clans.fab.FloatingActionMenu>
