<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/primary_light" android:startColor="@color/primary_light" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/primary_dark" android:startColor="@color/primary_dark" />
        </shape>
    </item>
</selector>